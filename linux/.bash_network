# Network-related utilities for bash
# (ported from .zsh_network)

# Show all network interfaces and their IPs
show_interfaces() {
    if command -v ip &> /dev/null; then
        ip addr show
    else
        ifconfig -a
    fi
}

# Ping a host with count and summary
ping_summary() {
    if [ -z "$1" ]; then
        echo "Usage: ping_summary <host>"
        return 1
    fi
    ping -c 4 "$1"
}

