# Cloudflare tunnel for sharing local services
cftunnel_function() {
    local port=${1:-8080}
    local protocol=${2:-http}
    
    # Process options
    if [[ "$1" == "-h" || "$1" == "--help" ]]; then
        cat << 'EOF'
Usage: cftunnel [PORT] [PROTOCOL]
Share a local service over the internet using Cloudflare Tunnel.

