    read -r choice

    case $choice in
        0)
            echo -n "Enter interface name (e.g., en0 or Wi-Fi): "
            read -r interface_name
            show_current_mac "$interface_name"
            ;;
        1)
            echo -n "Enter the new MAC address (e.g., E6:B8:BA:D2:41:07): "
            read -r mac_address
            echo -n "Enter the interface name (e.g., en0 or Wi-Fi): "
