aws_delete_user() {
    load_env
    local user_name="$1"
    if [[ -z "$user_name" ]]; then
        echo "Usage: aws_delete_user <user_name>"
        #remind of aws list user function available 
        aws_command_list
        return 1
    fi
    aws iam delete-user --user-name "$user_name" ${AWS_PROFILE:+--profile $AWS_PROFILE}
    echo "âœ… User: '$user_name' deleted."
}

